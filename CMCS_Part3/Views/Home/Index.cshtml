@{
    ViewData["Title"] = "Welcome to CMCS";
}

<div class="row align-items-center min-vh-75">
    <div class="col-lg-6">
        <h1 class="display-4 text-primary mb-4">
            <i class="fas fa-file-invoice-dollar me-3"></i>Contract Monthly Claim System
        </h1>
        <p class="lead mb-4">
            Streamline your monthly claim submissions and approvals with our automated system.
            Designed for Independent Contractor lecturers, programme coordinators, and academic managers.
        </p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a class="btn btn-primary btn-lg px-4 me-md-2" asp-controller="Account" asp-action="Login">
                <i class="fas fa-sign-in-alt me-2"></i>Get Started
            </a>
        </div>
    </div>
    <div class="col-lg-6 text-center">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-upload fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Submit Claims</h5>
                        <p class="card-text">Easily submit monthly claims with supporting documents</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Quick Approval</h5>
                        <p class="card-text">Streamlined approval process for coordinators and managers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Track Status</h5>
                        <p class="card-text">Real-time tracking of claim status throughout the process</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-file-pdf fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Generate Reports</h5>
                        <p class="card-text">Comprehensive reporting and analytics for HR</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>