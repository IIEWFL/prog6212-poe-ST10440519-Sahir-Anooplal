@{
    ViewData["Title"] = "Select Your Role";
    var lecturers = ViewBag.Lecturers as List<Lecturer>;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Contract Monthly Claim System</h2>
                    <p class="text-center mb-0">Select Your Access Role</p>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <!-- Lecturer Login -->
                        <div class="col-md-6 border-end">
                            <h4 class="text-center mb-4">Lecturer Access</h4>
                            <form method="post">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Select Your Identity:</label>
                                    <select name="lecturerId" class="form-select" required>
                                        <option value="">-- Select Lecturer --</option>
                                        @foreach (var lecturer in lecturers)
                                        {
                                            <option value="@lecturer.Id">@lecturer.Name - @lecturer.Department</option>
                                        }
                                    </select>
                                </div>
                                <input type="hidden" name="role" value="Lecturer">
                                <button type="submit" class="btn btn-primary w-100">Login as Lecturer</button>
                            </form>
                            <div class="mt-3 text-center">
                                <small class="text-muted">Submit claims, upload documents, track status</small>
                            </div>
                        </div>

                        <!-- Approver & HR Login -->
                        <div class="col-md-6">
                            <h4 class="text-center mb-4">Administrative Access</h4>
                            <div class="d-grid gap-3">
                                <a href="@Url.Action("LoginAsApprover")" class="btn btn-warning btn-lg">
                                    Programme Coordinator
                                </a>
                                <a href="@Url.Action("LoginAsApprover")" class="btn btn-warning btn-lg">
                                    Academic Manager
                                </a>
                                <a href="@Url.Action("LoginAsHR")" class="btn btn-info btn-lg">
                                    HR Department
                                </a>
                            </div>
                            <div class="mt-3 text-center">
                                <small class="text-muted">Review claims, approve payments, generate reports</small>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="text-center">
                        <h5>System Features</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <small class="text-muted">• Automated Calculations</small>
                            </div>
                            <div class="col-md-4">
                                <small class="text-muted">• Real-time Validation</small>
                            </div>
                            <div class="col-md-4">
                                <small class="text-muted">• Automated Reporting</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>