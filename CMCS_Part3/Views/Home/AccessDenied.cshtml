@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Access Denied</h2>
                </div>
                <div class="card-body">
                    <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                    <h4>You don't have permission to access this section.</h4>
                    <p class="text-muted">Please contact your system administrator if you believe this is an error.</p>
                    <a href="@Url.Action("Index")" class="btn btn-primary">Return to Dashboard</a>
                    <a href="@Url.Action("Logout")" class="btn btn-outline-secondary">Switch Role</a>
                </div>
            </div>
        </div>
    </div>
</div>