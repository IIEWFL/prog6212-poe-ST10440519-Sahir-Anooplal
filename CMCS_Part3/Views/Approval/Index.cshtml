@using CMCS_Part3.Services
@using CMCS_Part3.Models
@model List<CMCS_Part3.Controllers.ClaimWithValidation>
@{
    ViewData["Title"] = "Pending Claims for Approval";
    var culture = new System.Globalization.CultureInfo("en-ZA");
    var currentUser = ViewData["CurrentUser"] as CurrentUser;
    var approvalCriteria = ViewData["ApprovalCriteria"] as List<ApprovalCriteria>;
}

<h2>Pending Claims for Approval</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle"></i> @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <p class="mb-0 text-muted">Automated validation and approval workflow.</p>
    <div>
        <form asp-action="BulkAutoApprove" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success btn-sm">
                <i class="fas fa-bolt"></i> Auto-Approve Eligible
            </button>
        </form>
        <a href="@Url.Action("AutoApproveList")" class="btn btn-outline-success btn-sm">View Auto-Approve List</a>
        <a href="@Url.Action("All")" class="btn btn-outline-info btn-sm">View All Claims</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-sm">Back to Home</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>No Pending Claims</h4>
        <p class="mb-0">There are no claims waiting for approval at this time.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            var claim = item.Claim;
            var validation = item.ValidationResult;

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 @(validation.CanAutoApprove ? "border-success" : validation.IsValid ? "border-warning" : "border-danger")">
                    <div class="card-header @(validation.CanAutoApprove ? "bg-success text-white" : validation.IsValid ? "bg-warning text-dark" : "bg-danger text-white")">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title mb-1">Claim #@claim.Id</h5>
                                <small>@claim.Lecturer?.Name</small>
                            </div>
                            <div class="text-end">
                                <span class="badge @GetValidationBadgeClass(validation)">@validation.Recommendation</span>
                                <br>
                                <small>Submitted: @claim.SubmissionDate.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <!-- Validation Summary -->
                        @if (!validation.IsValid)
                        {
                            <div class="alert alert-danger small mb-3">
                                <strong>Validation Errors:</strong>
                                <ul class="mb-0">
                                    @foreach (var error in validation.ValidationErrors)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            </div>
                        }
                        else if (validation.ApprovalWarnings.Any())
                        {
                            <div class="alert alert-warning small mb-3">
                                <strong>Approval Warnings:</strong>
                                <ul class="mb-0">
                                    @foreach (var warning in validation.ApprovalWarnings)
                                    {
                                        <li>@warning</li>
                                    }
                                </ul>
                            </div>
                        }

                        <!-- Claim Details -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Hours:</strong><br>
                                <span class="h6">@claim.HoursWorked</span>
                            </div>
                            <div class="col-6">
                                <strong>Rate:</strong><br>
                                <span class="h6">@claim.HourlyRate.ToString("C", culture)</span>
                            </div>
                        </div>

                        <div class="mb-3 p-2 bg-light rounded">
                            <strong>Total Amount:</strong>
                            <div class="h5 text-success mb-0">@claim.TotalAmount.ToString("C", culture)</div>
                        </div>

                        @if (!string.IsNullOrEmpty(claim.Notes))
                        {
                            <div class="mb-3">
                                <strong>Notes:</strong>
                                <p class="mb-1 small text-muted">@claim.Notes</p>
                            </div>
                        }

                        <!-- Documents -->
                        <div class="mb-3">
                            <strong>Supporting Documents:</strong>
                            @if (claim.SupportingDocuments.Any())
                            {
                                <div class="mt-1">
                                    @foreach (var doc in claim.SupportingDocuments)
                                    {
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <small class="text-truncate" style="max-width: 70%;">
                                                <i class="fas fa-file"></i> @doc.FileName
                                            </small>
                                            <a href="@Url.Content("~/uploads/" + doc.StoredFileName)"
                                               target="_blank"
                                               class="btn btn-sm btn-outline-primary">
                                                View
                                            </a>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-warning small">
                                    <i class="fas fa-exclamation-triangle"></i> No documents
                                </div>
                            }
                        </div>

                        <!-- Approval Actions -->
                        <div class="d-grid gap-2">
                            @if (validation.CanAutoApprove)
                            {
                                <form asp-action="Approve" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@claim.Id" />
                                    <input type="hidden" name="autoApprove" value="true" />
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-bolt"></i> Auto-Approve
                                    </button>
                                </form>
                            }

                            <form asp-action="Approve" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit" class="btn btn-success w-100"
                                        @(!validation.IsValid ? "disabled" : "")>
                                    <i class="fas fa-check"></i> Manual Approve
                                </button>
                            </form>

                            <button type="button" class="btn btn-danger w-100"
                                    data-bs-toggle="modal"
                                    data-bs-target="#rejectModal@(claim.Id)">
                                <i class="fas fa-times"></i> Reject
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reject Modal -->
            <div class="modal fade" id="rejectModal@(claim.Id)" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Reject Claim #@claim.Id</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <form asp-action="Reject" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@claim.Id" />
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Rejection Reason</label>
                                    <textarea name="rejectionReason" class="form-control" rows="3"
                                      placeholder="Please provide a reason for rejection..." required></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4 text-center">
        <p class="text-muted">Showing @Model.Count pending claims with automated validation</p>
    </div>
}

@functions {
    string GetValidationBadgeClass(CMCS_Part3.Services.ApprovalValidationResult validation)
    {
        return validation.CanAutoApprove ? "bg-success" :
               validation.IsValid ? "bg-warning" : "bg-danger";
    }
}