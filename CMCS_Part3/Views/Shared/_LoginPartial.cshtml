@using Microsoft.AspNetCore.Identity
@using CMCS_Part3.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-user me-1"></i>@User.Identity!.Name
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-controller="Home" asp-action="Dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>

                @if (User.IsInRole("Lecturer"))
                {
                    <li><a class="dropdown-item" asp-controller="Claim" asp-action="Index"><i class="fas fa-file-upload me-2"></i>My Claims</a></li>
                    <li><a class="dropdown-item" asp-controller="Claim" asp-action="Submit"><i class="fas fa-plus me-2"></i>Submit Claim</a></li>
                }

                @if (User.IsInRole("ProgrammeCoordinator") || User.IsInRole("AcademicManager"))
                {
                    <li><a class="dropdown-item" asp-controller="Approval" asp-action="PendingClaims"><i class="fas fa-tasks me-2"></i>Pending Claims</a></li>
                    <li><a class="dropdown-item" asp-controller="Approval" asp-action="ApprovalHistory"><i class="fas fa-history me-2"></i>Approval History</a></li>
                }

                @if (User.IsInRole("HR"))
                {
                    <li><a class="dropdown-item" asp-controller="HR" asp-action="Dashboard"><i class="fas fa-chart-bar me-2"></i>HR Dashboard</a></li>
                    <li><a class="dropdown-item" asp-controller="HR" asp-action="Reports"><i class="fas fa-chart-pie me-2"></i>Reports</a></li>
                    <li><a class="dropdown-item" asp-controller="HR" asp-action="ManageLecturers"><i class="fas fa-users me-2"></i>Manage Lecturers</a></li>
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus me-2"></i>Register User</a></li>
                }

                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-controller="Account" asp-action="Logout">
                        <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                <i class="fas fa-sign-in-alt me-1"></i>Login
            </a>
        </li>
    }
</ul>