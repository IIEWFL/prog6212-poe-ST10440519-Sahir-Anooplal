@model IEnumerable<Lecturer>
@{
    ViewData["Title"] = "Manage Lecturers";
    var currentUser = ViewData["CurrentUser"] as CurrentUser;
}

<h2>Manage Lecturers</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <p class="mb-0">Manage lecturer profiles and information.</p>
    <div>
        <a href="@Url.Action("CreateLecturer")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Lecturer
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lecturer in Model)
                    {
                        <tr>
                            <td>@lecturer.Name</td>
                            <td>@lecturer.Email</td>
                            <td>@(lecturer.PhoneNumber ?? "Not provided")</td>
                            <td>@(lecturer.Department ?? "Not assigned")</td>
                            <td>
                                <span class="badge @(lecturer.IsActive ? "bg-success" : "bg-danger")">
                                    @(lecturer.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>@lecturer.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("EditLecturer", new { id = lecturer.Id })"
                                       class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button"
                                            class="btn @(lecturer.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                            onclick="toggleLecturerStatus(@lecturer.Id)">
                                        <i class="fas @(lecturer.IsActive ? "fa-pause" : "fa-play")"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleLecturerStatus(lecturerId) {
            if (confirm('Are you sure you want to change this lecturer\'s status?')) {
                fetch('@Url.Action("ToggleLecturerStatus")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `id=${lecturerId}`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('An error occurred: ' + error);
                });
            }
        }
    </script>
}