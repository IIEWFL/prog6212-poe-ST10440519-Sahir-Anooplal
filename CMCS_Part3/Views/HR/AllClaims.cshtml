@model List<Claim>
@{
    ViewData["Title"] = "All Claims";
}

<h2 class="mb-4"><i class="fas fa-list me-2"></i>All Claims</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>No claims found.
    </div>
}
else
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th>Processed</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>#@claim.ClaimId</td>
                                <td>@claim.Lecturer?.FirstName @claim.Lecturer?.LastName</td>
                                <td>@claim.HoursWorked</td>
                                <td>R @claim.HourlyRate</td>
                                <td class="fw-bold text-primary">R @claim.TotalAmount.ToString("F2")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(claim.Status)">
                                        @claim.Status
                                    </span>
                                </td>
                                <td>@claim.SubmittedDate.ToString("dd MMM yyyy")</td>
                                <td>@claim.ProcessedDate?.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (claim.Status == ClaimStatus.Approved)
                                    {
                                        <form method="post" asp-action="MarkAsPaid" asp-route-claimId="@claim.ClaimId" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check me-1"></i>Mark Paid
                                            </button>
                                        </form>
                                    }
                                    <a asp-controller="Approval" asp-action="Details" asp-route-id="@claim.ClaimId"
                                       class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@functions {
    public string GetStatusBadgeClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Pending => "bg-warning text-dark",
            ClaimStatus.Approved => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            ClaimStatus.Paid => "bg-info",
            _ => "bg-secondary"
        };
    }
}