@model List<ApplicationUser>
@{
    ViewData["Title"] = "Manage Lecturers";
}

<h2 class="mb-4"><i class="fas fa-users me-2"></i>Manage Lecturers</h2>

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="fas fa-user-plus me-2"></i>Register New User</h5>
    </div>
    <div class="card-body">
        <a asp-controller="Account" asp-action="Register" class="btn btn-success">
            <i class="fas fa-user-plus me-2"></i>Register New User
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>No lecturers found.
    </div>
}
else
{
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Lecturers List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Registered</th>
                            <th>Claims Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-info">@user.Role</span>
                                </td>
                                <td>@user.CreatedDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <span class="badge bg-secondary">@user.Claims.Count</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}