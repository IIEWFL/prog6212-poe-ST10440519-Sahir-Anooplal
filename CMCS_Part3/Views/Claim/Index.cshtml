@model List<Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-file-invoice me-2"></i>My Claims</h2>
    <a asp-action="Submit" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Submit New Claim
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>You haven't submitted any claims yet.
        <a asp-action="Submit" class="alert-link">Submit your first claim</a>.
    </div>
}
else
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Claim ID</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Submitted Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>#@claim.ClaimId</td>
                                <td>@claim.HoursWorked</td>
                                <td>R @claim.HourlyRate</td>
                                <td class="fw-bold text-primary">R @claim.TotalAmount.ToString("F2")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(claim.Status)">
                                        @claim.Status
                                    </span>
                                </td>
                                <td>@claim.SubmittedDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@claim.ClaimId"
                                       class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@functions {
    public string GetStatusBadgeClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Pending => "bg-warning text-dark",
            ClaimStatus.Approved => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            ClaimStatus.Paid => "bg-info",
            _ => "bg-secondary"
        };
    }
}